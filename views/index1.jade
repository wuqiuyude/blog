extends layout
block content
  div.main
    div.centent.left
        ul.list
          each article in articles
            li
              div.article
                h2.title= article.title
                div.info
                  span.time= article.time
                  span.icon-bookmark
                  span.tag.item= article.tag
                  span.icon-bookmark
                  span.catagory.item= article.catagory
                  - if(article.type)
                    span.icon-bookmark
                  span.type.item= article.type
                div.main!= article.blog
                a(href='/blog/'+article.id).more READ MORE

    include common/aside