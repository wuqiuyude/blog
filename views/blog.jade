extends layout
block content
  div.main.clearfix
    div.content.blog.left.clearfix
      div.article.detail
        h2.title= article.title
        div.info.markdown-body
          span.icon-alarm
          span.time= article.time
          - if(article.tag)
            span.icon-bookmark
            span.tag.item= article.tag
          - if(article.catagory)
            span.icon-bookmark
            span.catagory.item= article.catagory
          - if(article.type)
            span.icon-bookmark
            span.type.item= article.type
          span.icon-eye
          span.type.item.count= article.watch_count
        div.main.blog!= article.blog
    include common/aside